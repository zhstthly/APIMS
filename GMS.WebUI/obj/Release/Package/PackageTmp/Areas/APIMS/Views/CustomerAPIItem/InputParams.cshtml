@using GMS.Domian.APIMS.Entities
@model APIItem
@{
    Layout = null;
}

<table id="InputParamtable" class="table table-striped table-condensed table-bordered panel-collapse collapse in">
    <tr>
        <th width="150">名称</th>
        <th width="100">类型</th>
        <th width="50" style="min-width:50px">必须</th>
        <th width="1000">描述</th>
    </tr>
    @foreach (var item in Model.InputParameters)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <a onclick="customerClassClick(this)" data-toggle="modal" data-target="#myModal" href="#@item.ClassTypeID">
                    <input type="hidden" value="@item.ClassTypeID" />
                    @GMS.WebUI.Infrastructure.HtmlHelper.GetClassTypeName(@item.ClassTypeID)
                </a>
            </td>
            <td>@GMS.WebUI.Infrastructure.HtmlHelper.BoolToString(@item.IsNeed)</td>
            <td>@item.Description</td>
        </tr>
    }
</table>