@using GMS.Domian.APIMS.Entities
@using GMS.WebUI.Infrastructure
@model IList<GMS.Domian.APIMS.Entities.APIType>

@{
    ViewBag.Title = "APIType";
}
@section PageJS{
    <script type="text/javascript">
        $(function () {
            $('.divcolorpicker').colorpicker();
        })
    </script>
    }

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>API属性</h2>
    </div>
        <div class="panel-body">
            @Html.ActionLink("添加", "Add", null, new { @class = "btn btn-success" })
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    @foreach (var name in ClassHelper.GetDisplayNames(typeof(APIType)))
                    {
                        <th>@name</th>
                    }
                    <th>保存</th>
                    <th>删除</th>
                </tr>
            
        @foreach (var item in Model)
        {
            using (Html.BeginForm(null, "AdminAPIType"))
            {
                    @Html.HiddenFor(m => item.ID)
                    object attr = new { @class = "form-control" };
                    //if (Model[i].ID != 0)
                    //{
                    //    attr = new { @readonly = "true", @class = "form-control" };
                    //}

                    <tr>
                        <td>
                            @Html.TextBoxFor(m => item.Name, attr)
                        </td>
                        <td>
                            <div class="divcolorpicker input-group colorpicker-component">
                                @Html.TextBoxFor(m => item.Color, attr)
                                <span class="input-group-addon" ></span>
                            </div>
                        </td>
                        <td>
                            @Html.TextBoxFor(m => item.Description, attr)
                        </td>
                        <td>
                            <input name="Save" type="submit" class="btn btn-primary" value="保存" />
                        </td>
                        <td>
                            <input name="Delete" type="submit" class="btn btn-danger" value="删除" />
                        </td>
                    </tr>
                }
            }
            </table>
        </div>
</div>